{% extends 'base.html.twig' %}

{% block title %}Inscription - Candidat{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription - Entreprise</h1>

    {{ form_start(registrationForm) }}
        <h4>Vos informations</h4>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        <h4>Informations de votre entreprise</h4>
        {{ form_row(registrationForm.b_name) }}
        {{ form_row(registrationForm.b_address) }}
        {{ form_row(registrationForm.b_phone) }}
        {{ form_row(registrationForm.b_website) }}
        {{ form_row(registrationForm.b_siret) }}
        {{ form_row(registrationForm.imageFile) }}
        {{ form_row(registrationForm.b_activities) }}
        {{ form_row(registrationForm.b_description) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <span>J'ai déjà un compte ! <a href="{{ path('app_login') }}">Se connecter</a></span>
        <div class="d-grid gap-2 mb-4">
            <button type="submit" class="btn btn-primary btn-lg mt-4">Inscription</button>
        </div>
    {{ form_end(registrationForm) }}
{% endblock %}


