{% extends 'base.html.twig' %}

{% block title %}Editer son compte{% endblock %}

{% block body %}
	<div class="row justify-content-around col-11  col-md-6 mb-4 align-items-center mt-4 mx-auto">
		<h1>Editer son compte</h1>

		{{ include('user/_form.html.twig', {'button_label': 'Modifier'}) }}
		<div class="d-grid mb-2 d-md-block">
			<a class="btn btn-primary" href="{{ path('app_job_index') }}">Retour</a>
		</div>

        {% if user.businesses|length > 0 %}
            <h4 class="mt-2 opportunity-show">Liste de vos structures:</h4>
            {% for business in user.businesses %}
                <div class="card-formaqui mt-4 mb-4">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-auto">
                            {% if business.imageName is null %}
                                <img src="{{ asset('build/images/icon.svg') }}" class="img-thumbnail" width="48px" height="48px">
                            {% else %}
                                <img src="{{ asset('/images/avatars/' ~ business.imageName ~ '') }}" class="img-thumbnail" width="48px" height="48px">
                            {% endif %}
                        </div>
                        <div class="col-auto">
                            <span class="fw-bold">
                                {{ business.name }}
                            </span>
                        </div>
                        <div class="col-auto">
                            <a href="{{ path('app_business_edit', {'id': business.id}) }}" class="btn btn-primary mb-2">Voir la structure</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
	</div>
{% endblock %}
